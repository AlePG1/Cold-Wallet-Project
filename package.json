  },
  "devDependencies": {
    "electron": "^28.0.0",
    "jest": "^30.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
